{{ define "repo-refs" -}}
<!DOCTYPE html>
<html lang="en">
	<head>
		{{ template "head" }}
		<link rel="stylesheet" href="/static/repo-refs.css" />
		<title>Refs - {{ .Meta.DisplayName }}</title>
		<meta name="description" content="Git refs of {{ .Meta.DisplayName }}" />
	</head>
	<body>
		<header class="header">
			<ol class="breadcrumbs">
				<li>
					<a href="/">Top</a>
				</li>
				<li>
					<a href="/{{ .Meta.DisplayName }}">{{ .Meta.DisplayName }}</a>
				</li>
				<li>
					<a href="/{{ .Meta.DisplayName }}/refs" aria-current="page">Refs</a>
				</li>
			</ol>
			{{ template "repo-header" . }}
			{{ template "repo-nav" . }}
		</header>
		<main class="main">
			{{- $meta := .Meta -}}
			<h2 class="ref-heading">Branches</h2>
			<ul class="ref-list">
				{{- range  .Branches }}
				<li class="ref-item">
					<span class="ref-name">{{ .Name.Short }}</span>
					<div class="ref-actions">
						<a href="/{{ $meta.DisplayName }}/log/{{ .Name.Short }}">Commits</a>
						<a href="/{{ $meta.DisplayName }}/tree/{{ .Name.Short }}">Files</a>
						<a href="/{{ $meta.DisplayName }}/archive/{{ .Name.Short }}.tar.gz">Archive</a>
					</div>
				</li>
				{{ end -}}
			</ul>
			<h2 class="ref-heading">Tags</h2>
			{{- if .Tags }}
			<ul class="ref-list">
				{{- range .Tags }}
				<li class="ref-item">
					<span class="ref-name">{{ .Name }}</span>
					{{- if .Message }}
					<p class="ref-message">{{ .Message }}</p>
					{{ end -}}
					<div class="ref-actions">
						<a href="/{{ $meta.DisplayName }}/log/{{ .Name }}">Commits</a>
						<a href="/{{ $meta.DisplayName }}/tree/{{ .Name }}">Files</a>
						<a href="/{{ $meta.DisplayName }}/archive/{{ .Name }}.tar.gz">Archive</a>
					</div>
				</li>
				{{ end -}}
			</ul>
			{{- else -}}
			<p class="ref-empty">This repository has no tags.</p>
			{{ end -}}
		</main>
	</body>
</html>
{{- end }}
